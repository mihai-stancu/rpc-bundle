{
    "name": "mihai-stancu/rpc-bundle",

    "license": "MIT",
    "type": "library",

    "description": "",
    "keywords": ["rpc", "json-rpc", "xml-rpc"],

    "authors": [
        {
            "name": "Mihai Stancu",
            "email": "stancu.t.mihai@gmail.com"
        }
    ],

    "require": {
        "php": "^5.5.9",

        "symfony/framework-bundle": "~2@dev|~3@dev",
        "symfony/property-info": "~2.8.0-BETA1|~3@dev",

        "mihai-stancu/serializer": "dev-master",

        "symfony/dependency-injection": "~2@dev|~3@dev",
        "symfony/config": "~2@dev|~3@dev",
        "symfony/http-kernel": "~2@dev|~3@dev",
        "symfony/serializer": "~2@dev|~3@dev",
        "symfony/filesystem": "~2@dev|~3@dev",
        "symfony/event-dispatcher": "~2@dev|~3@dev",
        "symfony/http-foundation": "~2@dev|~3@dev",
        "symfony/debug": "~2@dev|~3@dev",
        "symfony/asset": "~2@dev|~3@dev",
        "symfony/routing": "~2@dev|~3@dev",
        "symfony/class-loader": "~2@dev|~3@dev",
        "symfony/security-core": "~2@dev|~3@dev",
        "symfony/security-csrf": "~2@dev|~3@dev",
        "symfony/stopwatch": "~2@dev|~3@dev",
        "symfony/templating": "~2@dev|~3@dev",
        "symfony/translation": "~2@dev|~3@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^5",
        "fzaninotto/faker": "^1"
    },

    "suggest": {
        "ext-amqp": "For AMQP connections",
        "guzzlehttp/guzzle": "For HTTP connections",
        "ext-stomp": "For STOMP connections",
        "ext-zmq": "For ZeroMQ connections"
    },
    "autoload": {
        "psr-4": {
          "MS\\RpcBundle\\": ""
        }
    },
    "config": {
        "preferred-install": "source"
    }
}
