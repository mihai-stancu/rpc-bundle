{
    "name": "mihai-stancu/rpc-bundle",

    "license": "MIT",
    "type": "library",

    "description": "A symfony RPC Client and Server implementation which integrates the symfony/serializer.",
    "keywords": ["rpc", "json-rpc", "xml-rpc"],

    "authors": [
        {
            "name": "Mihai Stancu",
            "email": "stancu.t.mihai@gmail.com"
        }
    ],

    "require": {
        "php": "^5.3",

        "symfony/framework-bundle": "^2|^3",

        "symfony/property-info": "dev-master@dev",
        "symfony/serializer": "dev-master@dev",

        "mihai-stancu/serializer": "^1"
    },
    "require-dev": {
        "phpunit/phpunit": "^5",
        "fzaninotto/faker": "^1"
    },

    "suggest": {
        "ext-amqp": "^1.6",
        "ext-stomp": "^1",
        "ext-zmq": "^1.1",

        "guzzlehttp/guzzle": "^6"
    },
    "autoload": {
        "psr-4": {
          "MS\\RpcBundle\\": ""
        }
    },
    "config": {
        "preferred-install": "source"
    }
}
